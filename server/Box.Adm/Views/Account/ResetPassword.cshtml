@using System.Linq
@using Box.Security.Models
@using Microsoft.Extensions.Options
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<Box.Common.Strings> Strings
@model ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_CardLayout.cshtml";
    ViewData["Title"] = Strings["Reset password"];
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Code" type="hidden" />
    <div class="form-group bmd-form-group formgroup-withValidation">
        <label asp-for="Email" class="bmd-label-floating">@Strings["Email"]</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger form-field-error"></span>
    </div>
    <div class="form-group bmd-form-group formgroup-withValidation">
        <label asp-for="Password" class="bmd-label-floating">@Strings["New password"]</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger form-field-error"></span>
    </div>
    <div class="form-group bmd-form-group formgroup-withValidation">
        <label asp-for="ConfirmPassword" class="bmd-label-floating">@Strings["Confirm Password"]</label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger form-field-error"></span>
    </div>
    <button type="submit" class="btn btn-raised btn-primary" style="margin-top:10px;">@Strings["Reset"]</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
